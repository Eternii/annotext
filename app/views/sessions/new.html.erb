<% provide(:title, "Sign in") %>
<h1>Admin Sign In</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>Interested in creating texts for Annotext? See our <%= link_to "Contact", contact_path %> page.</p>
  </div>
</div>
