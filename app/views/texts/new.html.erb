<% provide(:title, 'New Text') %>
<h1>Create New Text</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@text) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :author %>
      <%= f.text_field :author %>

      <%= f.submit "Create a text", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
