          <% end %>
        </li>
        <li>
          <%= link_to current_user do %>
            <%= content_tag(:span, "",class: "glyphicon glyphicon-briefcase") %>
            My Texts
          <% end %>
        </li>
        <li class="divider"></li>
        <li>
          <%= link_to users_path do %>
            <%= content_tag(:span, "", class: "glyphicon glyphicon-th-list") %>
