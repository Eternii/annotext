<ul class="nav navbar-nav navbar-right">
  <li>
    <% if params[:controller]=="texts" && params[:action]=="show" %>
      <%= link_to about_text_path(@text) do %>
        <%= content_tag(:span, "", class: "glyphicon glyphicon-info-sign") %>
        About This Text
      <% end %>
    <% elsif params[:controller]=="texts" && params[:action]=="about" %>
      <%= link_to text_path(@text) do %>
        <%= content_tag(:span, "", class: "glyphicon glyphicon-bookmark") %>
        Return to Text
      <% end %>
    <% end %>
  </li>
  <li>
    <%= link_to root_path do %>
      <%= content_tag(:span, "",class: "glyphicon glyphicon-book") %>
      Texts
    <% end %>
  </li>
  <li>
    <%= link_to help_path do %>
      <%= content_tag(:span, "", class: "glyphicon glyphicon-question-sign") %>
      Help
    <% end %>
  </li>
  <% if signed_in? %>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <%= content_tag(:span, "", class: "glyphicon glyphicon-pencil") %>
        Editor Menu
        <b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
        <li>
          <%= link_to edit_user_path(current_user) do %>
            <%= content_tag(:span, "", class: "glyphicon glyphicon-user") %>
